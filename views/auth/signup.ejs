<% include ../partials/header %>
<div class = "container">
    <div class = "row">
        <% if( message === ""){ %>
            <h1 style = "text-align : center">Register Here</h1>
        <% }else{ %>
            <h1 style = "text-align : center">Registered User exist , Please sign up as different User !</h1>
        <% } %>
        <h1 style = "text-align : center"></h1>
        <div style = "width : 30% ; margin: 0 auto;">
         <form action="/signup" method = "POST">
             <div class="form-group">
                <input class="form-control" type = "text" name = "username" placeholder = "User Name">
            </div>
            <div class="form-group">
             <input  class="form-control" type = "password" name = "password" placeholder = "User password">
             </div>
             <div class="form-group">
            <button class="btn btn-lg btn-default btn-primary btn-block">Sign Up</button>
            <a href = "/login" class="btn btn-lg btn-default btn-primary btn-block">Already a User ?</a>
            </div>
         </form>   
       </div>
    </div>
</div>