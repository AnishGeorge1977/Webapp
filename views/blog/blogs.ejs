<%include ../partials/header %>

<div class="ui main text container">
    <div class="ui huge header">
        Blog List
    </div>
    <div class="ui top attached segment">
        <div class="ui divided items">
             <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="image">
                      <img src = "<%= blog.image %>" >                        
                    </div>
                    <div class = "content">
                        <a class= "header" href="/blogs/<%=blog._id%> "><%= blog.title %></a>  
                        <div class = "meta">
                           <span><%= blog.created.toDateString() %></span> 
                        </div>
                        <div class="description">
                            <p><%= blog.body.substr(0, 50) %>....</p>   
                        </div>
                        <div class="extra">
                            <a class="ui floated basic violet button" href="/blog/<%=blog._id%>">Read More</a>
                            <!--i class="right chevron icon"></i-->
                            <a class = "ui floated basic red button" href="/blog/<%=blog._id%>/edit">Edit Blog</a> 
                        </div>
                    </div>
                </div>
            <% }); %>           
        </div>
    </div>
</div>
<%include ../partials/footer %>

